@model Discount
<h2 class="mt-3"><i class="far fa-address-card"></i> Edit Discount Code</h2>

<form method="post">
  <div asp-validation-summary="All"></div>
  <input type="hidden" name="DiscountId" value="@Model.DiscountId" />
  <div class="form-group col-md-3">
    <label asp-for="@Model.Code">Code</label>
    <input disabled asp-for="@Model.Code" class="form-control" placeholder="XXXX" />
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <label asp-for="@Model.Product.ProductName">Product</label>
      <input disabled asp-for="@Model.Product.ProductName" class="form-control" placeholder="ID" />
    </div>
    <div class="form-group col-md-2">
      <label asp-for="@Model.ProductId">Product ID</label>
      <input disabled asp-for="@Model.ProductId" class="form-control" placeholder="ID" />
    </div>
  </div>
  <div class="form-group col-md-6">
    <label asp-for="@Model.Title">Title</label>
    <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
  </div>
  <div class="form-group col-md-6">
    <label asp-for="@Model.Description">Description</label>
    <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
  </div>
  <div class="form-group col-md-3">
    <label asp-for="@Model.DiscountPercent">Percent</label>
    <input asp-for="@Model.DiscountPercent" class="form-control" placeholder="Percent" />
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <label asp-for="@Model.StartTime">Start Time</label>
      <input asp-for="@Model.StartTime" class="form-control">
    </div>
    <div class="form-group col-md-3">
      <label asp-for="@Model.EndTime">End Time</label>
      <input asp-for="@Model.EndTime" class="form-control">
    </div>

  </div>

  <button type="submit" class="btn btn-outline-primary mt-2 mb-4">Save</button>
  <a class="btn btn-outline-primary mt-2 mb-4" asp-controller="Discount" asp-action="Index" role="button">Cancel</a>
</form>